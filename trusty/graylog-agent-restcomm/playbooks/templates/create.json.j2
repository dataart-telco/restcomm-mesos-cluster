{
  "id": "{{ APP_NAME}}",
  "cpus": {{ CPU }},
  "mem": {{ MEM }},
  "instances": 0,
  "constraints": [["hostname", "CLUSTER", "{{ HOSTNAME_VAR }}"]],
  "container": {
    "type": "DOCKER",
    "docker": {
      "network": "BRIDGE",
      "image": "{{ DOCKER_IMAGE }}",
      "parameters": [
        { "key": "env", "value": "LOG_LEVEL={{ LOG_LEVEL_VAR }}" },
        { "key": "env", "value": "MARATHON_HOST={{ MARATHON_HOST_VAR }}" },
        { "key": "env", "value": "GRAYLOG_HOST={{ GRAYLOG_HOST_VAR }}" },
        { "key": "env", "value": "CALLS_MAX={{ CALLS_MAX_VAR }}" },
        { "key": "env", "value": "RESTCOMM_PORT={{ RESTCOMM_PORT_VAR }}" },
        { "key": "env", "value": "RESTCOMM_USER={{ RESTCOMM_USER_VAR }}" },
        { "key": "env", "value": "RESTCOMM_PSWD={{ RESTCOMM_PSWD_VAR }}" },
        { "key": "env", "value": "COLLECTD_DOCKER_APP={{ APP_NAME }}" },
        { "key": "env", "value": "COLLECTD_DOCKER_TASK_ENV=MESOS_TASK_ID" }
      ]
    }
  },
  "labels": {
        "collectd_docker_app": "{{ APP_NAME }}",
        "collectd_docker_task": "{{ APP_NAME }}"
  }
}
