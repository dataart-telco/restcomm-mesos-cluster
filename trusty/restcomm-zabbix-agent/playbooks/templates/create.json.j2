{
  "id": "{{ APP_NAME}}",
  "cpus": {{ CPU }},
  "mem": {{ MEM }},
  "instances": 0,
  "constraints": [["segment", "CLUSTER", "tools"]],
  "container": {
    "type": "DOCKER",
    "docker": {
      "network": "HOST",
      "image": "{{ DOCKER_IMAGE }}",
      "parameters": [
        { "key": "env", "value": "MARATHON_HOST={{ MARATHON_HOST_VAR }}" },
        { "key": "env", "value": "ZA_Server={{ ZABBIX_SERVER_VAR }}" },
        { "key": "env", "value": "ZA_ServerActive={{ ZABBIX_SERVER_VAR }}:{{ ZABBIX_SERVER_PORT_VAR }}" },
        { "key": "env", "value": "ZA_HostMetadata=restcomm" },
        { "key": "env", "value": "ZA_Hostname=restcomm" },
        { "key": "env", "value": "ZA_ListenPort={{ ZABBIX_AGENT_PORT_VAR }}" },
        { "key": "env", "value": "ZA_RefreshActiveChecks={{ ZABBIX_CHECK_INTERVAL_VAR }}" },
        { "key": "env", "value": "COLLECTD_DOCKER_APP={{ APP_NAME }}" },
        { "key": "env", "value": "COLLECTD_DOCKER_TASK_ENV=MESOS_TASK_ID" }
      ]
    }
  },
  "labels": {
        "collectd_docker_app": "{{ APP_NAME }}",
        "collectd_docker_task": "{{ APP_NAME }}"
  }
}
